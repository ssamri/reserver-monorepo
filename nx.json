{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "reserver",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*"],
    "production": ["default", "!{projectRoot}/**/*.spec.*", "!{projectRoot}/**/*.test.*"]
  },
  "targetDefaults": {
    "build": {
      "inputs": ["production", "^production"]
    },
    "lint": {
      "inputs": ["default", "^default"]
    },
    "test": {
      "inputs": ["default", "^default"]
    },
    "serve": {
      "dependsOn": ["^build"]
    }
  },
  "projects": {
    "client": "apps/client",
    "extranet": "apps/extranet",
    "admin": "apps/admin",
    "api": "apps/api",
    "ui": "libs/ui",
    "models": "libs/models",
    "utils": "libs/utils",
    "i18n": "libs/i18n"
  }
}
